{
  "name": "@smartdocs/api",
  "version": "0.1.0",
  "type": "module",
  "main": "src/shared/http/index.ts",
  "types": "src/shared/http/index.ts",
  "scripts": {
    "dev": "bun run --watch src/shared/http/index.ts",
    "db:generate": "drizzle-kit generate --name",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "build": "bun build --compile ./src/shared/http/index.ts --minify-whitespace --minify-syntax --outfile ./server",
    "consume:transcription": "bun run src/shared/queue/consumers/transcription.consumer.ts",
    "consume:gatekeeper": "bun run src/shared/queue/consumers/gatekeeper.consumer.ts",
    "consume:analyst": "bun run src/shared/queue/consumers/analyst.consumer.ts"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.4.0",
    "@elysiajs/openapi": "1.4.11",
    "@types/amqplib": "0.10.8",
    "@types/fluent-ffmpeg": "2.1.28",
    "amqplib": "0.10.9",
    "drizzle-orm": "0.44.7",
    "elysia": "1.4.15",
    "fluent-ffmpeg": "2.1.3",
    "nodejs-whisper": "^0.2.9",
    "postgres": "3.4.7",
    "zod": "4.1.12"
  },
  "devDependencies": {
    "@types/bun": "1.3.2",
    "bun-types": "1.3.2",
    "drizzle-kit": "0.31.6"
  }
}